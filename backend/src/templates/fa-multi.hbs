        <td class="label">Hora de Inicio:</td>
        <td class="value"></td>
      </tr>
      <tr>
        <td class="label">Código:</td>
        <td class="value">{{encabezado.codigoPuesto}}</td>
        <td class="label">Hora de Término:</td>
        <td class="value"></td>
      </tr>
    </table>

    <div class="section-title">I. PLANTEAMIENTO(S)</div>

    <div class="caso-title">CASO {{casoNumero}}</div>

    <div class="planteamiento-box">
      {{caso.planteamiento}}
    </div>

    <div class="firma-section">
      <div class="firma-box">
        <div class="firma-line"></div>
        <div class="firma-name">{{encabezado.nombreEspecialista}}</div>
        <div class="firma-text">NOMBRE Y FIRMA DE LA PERSONA ASPIRANTE</div>
      </div>
      <div class="firma-box">
        <div class="firma-line"></div>
        <div class="firma-text">Hora de término</div>
      </div>
    </div>

    <div class="page-number">{{add (multiply (subtract casoNumero 1) 2) 1}} de {{multiply totalCasos 2}}</div>

