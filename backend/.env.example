# ========================================
# ENTORNO DE EJEMPLO (.env.example)
# Este archivo sirve como plantilla de referencia.
# NO contiene datos sensibles.
# ========================================

# Entorno
NODE_ENV=development

# Puerto del servidor
PORT=4000

# Base de datos MongoDB
# Ejemplo de conexión local o de prueba
MONGO_URI=mongodb://localhost:27017/INEGI_DB

# URL pública donde corre el frontend que consume el backend
# En desarrollo normalmente es Vite
PUBLIC_BASE_URL=http://localhost:5173

# Seguridad - JWT
# Clave de ejemplo (NO usar en producción)
JWT_SECRET=example-secret-key

# Tiempo de vida de los links (en horas)
LINK_TTL_HOURS=72

# Debug (0 = off, 1 = on)
DEBUG_LINKS=1

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
